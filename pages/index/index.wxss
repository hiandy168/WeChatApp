.section {
    padding: 10px 0;
    /*border-top: 1px solid #e0e0e0;*/
    border-bottom: 1px solid #e0e0e0;
}
input {
    padding: 0 20px;
}
.btn-area {
    position: fixed;
    bottom: 0;
    width: 100%;
}
.flex {
    display: flex;
    align-items: center;
    justify-content: center;
}
.section__title {
    width:105px;
    text-align:center;
}
.result-bg {
    width:100%;
    height:100%;
    background-color:rgba(0,0,0,0.88);
    position:absolute;
    top:0;
    z-index:999;
}
.result-body {
    width:100%;
    height:100%;
    background-color:white;
    position:absolute;
    top:0;
    z-index:999;
}


.table {
  border: 0px solid darkgray;
}
.tr {
  display: flex;
  width: 100%;
  justify-content: center;
  height: 3rem;
  align-items: center;
}
.td {
    width:40%;
    justify-content: center;
    text-align: center;
    border-right: 1px solid #999999;
}
.bg-w{
  background: snow;
  position:fixed;
  top:3rem;
}
.bg-g{
  background: #E6F3F9;
}
.marginTop {
  margin-top: 6rem;
}
.th {
  width: 40%;
  justify-content: center;
  background: #3366FF;
  color: #fff;
  display: flex;
  height: 3rem;
  align-items: center;
}